{
	"isEnterprise": "false",
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./",
		"module": "commonjs",
		"removeComments": true,
		"sourceMap": true,
		"target": "es5",
		"outDir": "build",
		"allowJs": true,
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"strictNullChecks": false,
		"paths": {
			"@src/*": ["./src/*"],
			"@manager/*": ["./src/manager/*"],
			"@shared/*": ["../crusher-shared/*"],
			"@models/*": ["./src/models/*"],
			"@config/*": ["./config/*"],
			"@util/*": ["./src/util/*"],
			"@generator/*": ["../code-generator/*"]
		}
	},
	"typeRoots": ["node_modules/@types"],
	"files": [
		"./index.ts"
	],
	"include": ["./src/**/*"],
	"exclude": ["**/*.spec.ts"]
}
