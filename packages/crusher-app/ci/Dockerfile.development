FROM node:lts-alpine3.12

MAINTAINER Utkarsh Dixit "utkarshdix02@gmail.com"

RUN apk add --no-cache bash

RUN apk add git

VOLUME ["/app"]
VOLUME ["/code-generator"]

WORKDIR /app

ENTRYPOINT ["/bin/sh"]

RUN chown -R node /usr/local/lib/node_modules

USER node

EXPOSE 7000

ENTRYPOINT ["npm"]
CMD ["run", "-s", "runInDev"]